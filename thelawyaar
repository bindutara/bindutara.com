  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>The Lawyaar · Case Merit Calculator</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 text-gray-900">
  <div class="min-h-screen w-full p-6 md:p-10">
    <div class="max-w-5xl mx-auto space-y-6">
      <header class="flex items-center justify-between">
        <h1 class="text-2xl md:text-3xl font-bold">The Lawyaar · Case Merit Calculator</h1>
        <div class="text-sm opacity-70">v1.0 · heuristic (not legal advice)</div>
      </header>

      <!-- Case Type -->
      <section class="grid md:grid-cols-3 gap-4 items-end">
        <div class="md:col-span-2">
          <label class="block text-sm font-medium mb-1">Case Type</label>
          <select id="caseType" class="w-full rounded-xl border p-3 shadow-sm bg-white">
            <option value="Civil / Property">Civil / Property</option>
            <option value="Criminal / Bail">Criminal / Bail</option>
            <option value="Family">Family</option>
            <option value="Corporate / Commercial">Corporate / Commercial</option>
            <option value="Consumer">Consumer</option>
            <option value="Insurance">Insurance</option>
            <option value="Employment / Labour">Employment / Labour</option>
            <option value="Tax / GST">Tax / GST</option>
          </select>
        </div>

        <button onclick="calculateMerit()" class="rounded-2xl px-5 py-3 bg-black text-white shadow hover:shadow-md transition">
          Calculate Merit
        </button>
      </section>

      <section class="grid md:grid-cols-2 gap-6">
        <!-- Inputs -->
        <div class="space-y-4">
          <h2 class="text-lg font-semibold">Inputs</h2>
          <div id="questions" class="space-y-3"></div>
          <div class="flex gap-2">
            <button onclick="resetForm()" class="rounded-xl px-4 py-2 border bg-white shadow-sm">
              Reset
            </button>
            <button onclick="calculateMerit()" class="rounded-xl px-4 py-2 bg-black text-white shadow">
              Calculate
            </button>
          </div>
        </div>

        <!-- Results -->
        <div class="space-y-4">
          <h2 class="text-lg font-semibold">Results</h2>
          <div class="p-5 rounded-2xl bg-white border shadow-sm">
            <div class="text-sm mb-1 opacity-70">Merit Score</div>
            <div id="meritScore" class="text-4xl font-bold">—%</div>
            <div class="mt-3 text-sm">
              <strong>Expected Duration:</strong> <span id="duration">—</span>
            </div>
            <div class="mt-1 text-sm">
              <strong>Estimated Legal Costs:</strong> <span id="costs">—</span>
            </div>
          </div>

          <div class="p-5 rounded-2xl bg-white border shadow-sm">
            <div class="text-sm font-semibold mb-2">Key Risks</div>
            <ul id="risks" class="list-disc pl-5 space-y-1 text-sm text-gray-700"></ul>
          </div>

          <div class="p-5 rounded-2xl bg-white border shadow-sm">
            <div class="text-sm font-semibold mb-2">Suggestions</div>
            <ul id="suggestions" class="list-disc pl-5 space-y-1 text-sm text-gray-700"></ul>
          </div>

          <div class="text-xs text-gray-500">
            *This tool provides a heuristic score based on user inputs and common legal factors.  
            It is not legal advice. Final strategy and filing decisions must be reviewed by a licensed advocate with full documents.
          </div>
        </div>
      </section>

      <footer class="pt-4 border-t text-xs text-gray-500">
        © <span id="year"></span> The Lawyaar · Case Merit Calculator
      </footer>
    </div>
  </div>

  <script>
    document.getElementById("year").innerText = new Date().getFullYear();

    // Example questions for one case type. You can expand this similar to React version.
    const QUESTIONS = {
      "Civil / Property": [
        { key: "hasSaleDeed", label: "Registered deed/contract available?", type: "boolean" },
        { key: "paymentProof", label: "Proof of payment available?", type: "boolean" },
        { key: "possession", label: "Current possession status", type: "select", options: ["Client", "Opponent", "Shared"] },
        { key: "limitation", label: "Within limitation period (3 years typical)?", type: "boolean" },
        { key: "noticesServed", label: "Legal notice served?", type: "boolean" },
        { key: "disputeValue", label: "Dispute amount (₹)", type: "number" },
      ]
      // TODO: Add other case types here (same as React version)
    };

    function renderQuestions() {
      const caseType = document.getElementById("caseType").value;
      const qDiv = document.getElementById("questions");
      qDiv.innerHTML = "";
      (QUESTIONS[caseType] || []).forEach(q => {
        let input = "";
        if (q.type === "boolean") {
          input = `
            <select class="w-full rounded-lg border p-2" id="${q.key}">
              <option value="">Select</option>
              <option value="true">Yes</option>
              <option value="false">No</option>
            </select>`;
        } else if (q.type === "select") {
          input = `<select class="w-full rounded-lg border p-2" id="${q.key}">
            <option value="">Select</option>
            ${q.options.map(o => `<option value="${o}">${o}</option>`).join("")}
          </select>`;
        } else if (q.type === "number") {
          input = `<input type="number" id="${q.key}" class="w-full rounded-lg border p-2" />`;
        }
        qDiv.innerHTML += `
          <div class="p-4 rounded-2xl bg-white shadow-sm border">
            <label class="block text-sm font-medium mb-1">${q.label}</label>
            ${input}
          </div>`;
      });
    }

    function calculateMerit() {
      const caseType = document.getElementById("caseType").value;
      const inputs = QUESTIONS[caseType] || [];
      let merit = 0;
      let risks = [];
      let suggestions = [];

      inputs.forEach(q => {
        const el = document.getElementById(q.key);
        let val = el ? el.value : "";
        if (q.type === "boolean") {
          if (val === "true") merit += 15;
          else if (val === "false") risks.push(q.label);
        }
        if (q.type === "select") {
          if (val === "Client") merit += 10;
          if (val === "Opponent") risks.push("Possession with opponent");
        }
        if (q.type === "number" && val) {
          merit += Math.min(20, Math.log10(val) * 5);
        }
      });

      if (merit < 40) suggestions.push("Consider settlement or ADR before filing");
      if (merit >= 70) suggestions.push("Proceed with filing – merits appear favourable");

      document.getElementById("meritScore").innerText = Math.min(100, Math.round(merit)) + "%";
      document.getElementById("duration").innerText = "6–24 months";
      document.getElementById("costs").innerText = "₹50,000 – ₹2,00,000";

      document.getElementById("risks").innerHTML = risks.length
        ? risks.map(r => `<li>${r}</li>`).join("")
        : "<li>No major risks detected</li>";

      document.getElementById("suggestions").innerHTML = suggestions.length
        ? suggestions.map(s => `<li>${s}</li>`).join("")
        : "<li>—</li>";
    }

    function resetForm() {
      renderQuestions();
      document.getElementById("meritScore").innerText = "—%";
      document.getElementById("duration").innerText = "—";
      document.getElementById("costs").innerText = "—";
      document.getElementById("risks").innerHTML = "";
      document.getElementById("suggestions").innerHTML = "";
    }

    document.getElementById("caseType").addEventListener("change", renderQuestions);
    renderQuestions();
  </script>
</body>
</html>
